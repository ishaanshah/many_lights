<scene version="3.0.0">
    <default name="spp" value="64"/>
    <default name="width" value="683"/>
    <default name="height" value="512"/>
    <default name="emitter_type" value="ltc_area" />

    <texture type="bitmap" id="ltc_1">
        <string name="filename" value="./data/isotropic_ggx_1.exr" />
        <boolean name="raw" value="true" />
        <string name="wrap_mode" value="clamp" />
    </texture>
    
    <texture type="bitmap" id="ltc_2">
        <string name="filename" value="./data/isotropic_ggx_2.exr" />
        <boolean name="raw" value="true" />
        <string name="wrap_mode" value="clamp" />
    </texture>

    <texture type="bitmap" id="ltc_3">
        <string name="filename" value="./data/isotropic_ggx_3.exr" />
        <boolean name="raw" value="true" />
        <string name="wrap_mode" value="clamp" />
    </texture>

    <integrator type="ltc">
        <ref name="ltc_1" id="ltc_1" />
        <ref name="ltc_2" id="ltc_2" />
        <ref name="ltc_3" id="ltc_3" />
    </integrator>

    <sensor type="perspective" id="camera">
        <string name="fov_axis" value="smaller" />
        <float name="focus_distance" value="6.0" />
        <float name="fov" value="28.8415" />
        <transform name="to_world">
            <lookat target="3.04072, -2.85176, 2.80939"
                    origin="3.69558, -3.46243, 3.25463"
                    up="-0.317366, 0.312466, 0.895346" />
        </transform>

        <sampler type="independent">
            <integer name="sample_count" value="$spp" />
        </sampler>

        <film type="hdrfilm" id="film">
            <integer name="width" value="$width" />
            <integer name="height" value="$height" />
            <string name="pixel_format" value="rgb" />
            <rfilter type="gaussian" />
        </film>
    </sensor>

    <bsdf type="roughconductor" id="bsdf-diffuse">
        <float name="alpha" value="0.001" />
    </bsdf>

    <texture type="checkerboard" id="texture-checkerboard">
        <rgb name="color0" value="0.2" />
        <rgb name="color1" value="0.4" />
        <transform name="to_uv">
            <scale x="8.000000" y="8.000000" />
        </transform>
    </texture>

    <bsdf type="roughplastic" id="bsdf-plane">
        <float name="alpha" value="0.4" />
        <ref name="diffuse_reflectance" id="texture-checkerboard" />
    </bsdf>

    <bsdf type="roughplastic" id="bsdf-matpreview">
        <float name="alpha" value="0.05" />
        <rgb name="diffuse_reflectance" value="0.240, 0.771, 0.361" />
    </bsdf>

    <shape type="obj">
        <string name="filename" value="area_light_1.obj" />
        <emitter type="$emitter_type">
            <rgb name="radiance" value="1.0 1.0 1.0" />
        </emitter>
        <transform name="to_world">
            <translate x="0" y="0" z="3" />
        </transform>
    </shape>

